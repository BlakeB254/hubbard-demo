{
  "name": "hubbard-inn-next16",
  "version": "2.0.0",
  "private": true,
  "description": "Event management platform rebuilt with Next.js 16 best practices",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:admin": "pnpm --filter web-admin dev",
    "dev:customer": "pnpm --filter web-customer dev",
    "dev:promoter": "pnpm --filter web-promoter dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm -r build",
    "build:admin": "pnpm --filter web-admin build",
    "build:customer": "pnpm --filter web-customer build",
    "build:promoter": "pnpm --filter web-promoter build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "event-management",
    "ticketing",
    "monorepo",
    "next.js-16",
    "react-19",
    "turbopack",
    "server-components",
    "tailwind-css-4"
  ],
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=9.0.0"
  }
}
