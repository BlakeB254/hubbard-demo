{
  "name": "hubbard-inn-next16",
  "version": "2.0.0",
  "private": true,
  "description": "Event management platform rebuilt with Next.js 16 best practices",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@hubbard-inn/web",
    "dev:web": "npm run dev --workspace=@hubbard-inn/web",
    "build": "npm run build --workspace=@hubbard-inn/web",
    "build:web": "npm run build --workspace=@hubbard-inn/web",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "keywords": [
    "event-management",
    "ticketing",
    "monorepo",
    "next.js-16",
    "react-19",
    "turbopack",
    "server-components",
    "tailwind-css-4"
  ],
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.9.0"
  }
}
